{
  "name": "haveno-web",
  "version": "0.0.8",
  "type": "module",
  "description": "Mobile-first web app for Haveno",
  "source": "index.html",
  "scripts": {
    "unit": "elm-test 'src/**/Tests/Test*.elm' --fuzz 100",
    "spec": "npx elm-spec-runner --specRoot ./",
    "jstest": "vitest",
    "debug": "elm make src/Main.elm --output=js/elm.js --debug",
    "optimize": "elm make src/Main.elm --output=js/elm.js --optimize",
    "terminals": "./openterminals.sh",
    "clean": "yarn cache clean",
    "prepare": "husky install",
    "start": "parcel",
    "build": "parcel build",
    "serve": "parcel serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@ledgerhq/hw-app-btc": "^10.4.1",
    "@ledgerhq/hw-transport-webhid": "^6.29.2",
    "@ledgerhq/hw-transport-webusb": "^6.28.4",
    "@ledgerhq/logs": "^6.12.0",
    "@ledgerhq/wallet-api-client": "^1.5.9",
    "@ledgerhq/wallet-api-simulator": "^1.1.16",
    "@x-cmd-pkg/grpcurl": "^0.0.0-v1.8.9-meta.yml",
    "core-js": "^3.38.1",
    "cors": "^2.8.5",
    "elm-spec-runner": "^2.5.1",
    "esbuild": "^0.23.1",
    "grpc-web": "^1.5.0",
    "mime": "^3.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "vite": "^5.4.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "elm": "^0.19.1-5",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "parcel": "^2.12.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vite-plugin-elm": "^3.0.1",
    "vite-plugin-env-compatible": "^2.0.1",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^2.1.1"
  },
  "alias": {
    "@ledgerhq/devices": "@ledgerhq/devices/lib-es"
  }
}
